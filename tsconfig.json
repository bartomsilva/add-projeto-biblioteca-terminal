{
  "compilerOptions": {
    "target": "ES6",                                   
    "module": "commonjs",                                 
    "rootDir": "./src",                                  
    "outDir": "./build",                                
    "removeComments": true,                            
    "esModuleInterop": true,                              
    "forceConsistentCasingInFileNames": true,            
    "noImplicitAny": true,                             
    "strictFunctionTypes": true,                    
    "skipLibCheck": true,                          
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "build",  
    "tests",
    "jest.config.ts"
  ]
}
